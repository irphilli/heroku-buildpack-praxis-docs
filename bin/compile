#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

build_dir=$1
cache_dir=$2
env_dir=$3
bp_dir=$(dirname $(dirname $0))

# borrowed from https://github.com/gunpowderlabs/buildpack-ruby-rake-deploy-tasks
blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
  for e in $(ls $env_dir); do
    echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
    :
  done
fi

cd $build_dir

praxis_dir=`bundle show praxis`
praxis_dir_base=`basename ${praxis_dir}`
praxis_cache=${cache_dir}/${praxis_dir_base}/node_modules
mkdir -p ${praxis_cache}
ln -s ${praxis_cache} ${praxis_dir}/lib/api_browser/node_modules
echo "-----> Using cache dir: ${praxis_cache}"

echo "-----> Installing Praxis Documentation"
bundle exec rake praxis:docs:build
echo "       Creating '/static' directory..."
mkdir -p static
echo "       Moving docs from 'docs/output' to 'static/docs'..."
mv docs/output static/docs
echo "-----> Success! Praxis Docs are now generated and available."
